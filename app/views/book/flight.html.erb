   <%= form_tag("/book/flight", method: "post" , remote: true) do %> 
  <div class="col-md-5 col-md-offset-1">
                    <section id="first-tab-group" class="tabgroup">
                        <div id="tab1">
                            <div class="submit-form">
                                <h4>Check availability for <em>direction</em>:</h4>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <fieldset>
                                                <label for="from">From:</label>
                                               <%= select_tag(:src, options_for_select(@codes)) %> 
                                            </fieldset>
                                        </div>
                                        

                                        <div class="col-md-6">
                                            <fieldset>
                                                <label for="to">To:</label>
                                              <%= select_tag(:dest, options_for_select(@codes)) %>
                                            </fieldset>
                                        </div>

                                        <div class="col-md-6">
                                            <fieldset>
                                                <label for="departure">Departure date:</label>
                                            <%= text_field_tag :dept , "" , class: "form-control date" , id: "depature"  %>
                                                
                                            </fieldset>
                                         </div>

                                        <div class="col-md-6">
                                            <fieldset>
                                                <label for="return">Return date:</label>
                                          <%= text_field_tag :arr , "" , class: "form-control date" , id: "return"  %>
                                            </fieldset>
                                        </div>

                                        <div class="col-md-6">
                                            <fieldset>
                                                <label for="return">Adults(0-9):</label>
                                          <%= text_field_tag :adults , "" , class: "form-control date" , id: "return"  %>
                                            </fieldset>
                                        </div>

                                        <div class="col-md-6">
                                            <fieldset>
                                                <label for="return">Children(0-9):</label>
                                          <%= text_field_tag :child , "" , class: "form-control date" , id: "return"  %>
                                            </fieldset>
                                        </div>

                                        <div class="col-md-6">
                                            <fieldset>
                                                <label for="return">Infants:</label>
                                          <%= text_field_tag :infants , "" , class: "form-control date" , id: "return"  %>
                                            </fieldset>
                                        </div>
                                        <div class="col-md-6">
                                           <label for="to">Class:</label>
                                     <%= select_tag(:class, options_for_select([["Economy", "E"], ["Business", "B"]] ) ) %>
  
                                        </div>
                                        <div class="col-md-6">
                                            <fieldset>
                                                <button type="submit" id="form-submit" class="btn">Order Ticket Now</button>
                                            </fieldset>
                                        </div>
                                    </div>
                                
                            </div>
                        </div>
                    </section>
                </div>

 <% end %>




<div id="result">
  
</div>